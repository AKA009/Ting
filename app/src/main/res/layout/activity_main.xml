<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.c.aka009.listener.MainActivity">

    <ImageView
        android:id="@+id/P_IV_bg2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/bg_p_2"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="3dp"/>

    <ListView
        android:id="@+id/P_LV_1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="9dp"
        android:layout_marginLeft="9dp"
        android:layout_marginRight="9dp"
        android:layout_marginStart="9dp"
        android:divider="@color/my_black_D"
        android:dividerHeight="1dp"
        app:layout_constraintBottom_toBottomOf="@+id/P_IV_bg2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/P_IV_bg1"
        app:layout_constraintVertical_bias="0.0"/>

    <ImageView
        android:id="@+id/P_IV_bg1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/bg_p_1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"/>

    <ImageView
        android:id="@+id/P_logo"
        android:layout_width="112dp"
        android:layout_height="93dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/main"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:id="@+id/P_TV_currentMusicPlayerName"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="8dp"
        android:text="TextView"
        android:textColor="@color/my_black"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/P_IV_divider"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toRightOf="@+id/P_logo"
        app:layout_constraintRight_toRightOf="@+id/P_IV_bg1"
        app:layout_constraintTop_toBottomOf="@+id/P_TV_currentMusicName"
        app:layout_constraintVertical_bias="1.0"/>

    <TextView
        android:id="@+id/P_TV_currentMusicName"
        android:layout_width="220dp"
        android:layout_height="66dp"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="16dp"
        android:text="TextView"
        android:textAlignment="viewStart"
        android:textColor="@color/my_black"
        android:textSize="18sp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toRightOf="@+id/P_logo"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageButton
        android:id="@+id/P_B_start"
        android:layout_width="43dp"
        android:layout_height="54dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/transparent"
        android:scaleType="centerInside"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/P_IV_divider"
        app:srcCompat="@drawable/p_start"/>

    <ImageButton
        android:id="@+id/P_B_pre"
        android:layout_width="42dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="@+id/P_B_start"
        app:layout_constraintTop_toTopOf="@+id/P_B_start"
        app:srcCompat="@drawable/p_pre"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintRight_toLeftOf="@+id/P_B_start"
        android:layout_marginRight="22dp"
        android:layout_marginEnd="22dp"/>

    <ImageButton
        android:id="@+id/P_B_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="@+id/P_B_pre"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/P_B_pre"
        app:layout_constraintTop_toTopOf="@+id/P_B_pre"
        app:srcCompat="@drawable/p_list"/>

    <ImageButton
        android:id="@+id/P_B_next"
        android:layout_width="42dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="@+id/P_B_start"
        app:layout_constraintTop_toTopOf="@+id/P_B_start"
        app:srcCompat="@drawable/p_next"
        app:layout_constraintVertical_bias="1.0"
        app:layout_constraintLeft_toRightOf="@+id/P_B_start"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"/>

    <ImageButton
        android:id="@+id/P_B_repeat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="@+id/P_B_next"
        app:layout_constraintLeft_toRightOf="@+id/P_B_next"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/P_B_next"
        app:srcCompat="@drawable/p_offrepeat"/>

    <ImageView
        android:id="@+id/P_IV_divider"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@color/my_black_D"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/P_logo"
        app:layout_constraintHorizontal_bias="0.0"/>

    <ImageView
        android:id="@+id/P_IV_splash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="0dp"
        android:background="@color/my_white"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/splash_v086"/>

</android.support.constraint.ConstraintLayout>
